# This file is consumed by docker compose for
# configuration of Hermine
#
# Change values, copy this file to .env
# and run `docker compose --profile (localhost|https) -up`

HERMINE_SECRET=RANDOMSTRINGFORSECURITY
# Required for localhost profile
# PORT=9000
# Required for https profile
# HERMINE_HOST=example.com

# Default size is 10MB (value must be expressed in bytes)
MAX_UPLOAD_SIZE=10485760

# If you have a reverse-proxy in front of Caddy
# which serve Hermine on a subpath, you can
# set this variable to the subpath to make
# Hermine generate correct URLs.
# FORCE_SCRIPT_NAME = "/hermine"

# OAuth settings
# OAUTH_CLIENT_ID =
# OAUTH_DOMAIN =
# OAUTH_CLIENT_SECRET =
# OAUTH_SCOPE =   # list of scope separated by ','
# OAUTH_ID_KEY =
# OAUTH_TOKEN_URL =
# OAUTH_AUTHORIZE_URL =
# OAUTH_USER_URL =
# OAUTH_USERNAME_PROPERTY = 