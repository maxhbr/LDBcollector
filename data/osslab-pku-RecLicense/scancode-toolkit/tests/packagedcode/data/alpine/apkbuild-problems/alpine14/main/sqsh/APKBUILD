# Maintainer: Jeff Bilyk <jbilyk@gmail.com>
pkgname=sqsh
pkgver=2.5.16.1
case $pkgver in
*.*.*.*) _v=${pkgver%.*.*};;
*.*.*) _v=${pkgver%.*};;
*) _v=$pkgver;;
esac
pkgrel=4
pkgdesc="Sybase iSQL replacement"
url="http://www.sqsh.org"
arch="all"
license="GPL"
makedepends="freetds-dev readline-dev ncurses-dev"
subpackages="$pkgname-doc"
source="https://downloads.sourceforge.net/project/sqsh/sqsh/sqsh-$_v/sqsh-$pkgver.tgz
	tds-version.patch
	freetds-1.2.patch
	"

prepare() {
	default_prepare
	update_config_sub
}

builddir="$srcdir"/$pkgname-$_v
build() {
	SYBASE=/usr
	export SYBASE
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/doc \
		--with-readline
	make
}

package() {
	make DESTDIR="$pkgdir" install
	make DESTDIR="$pkgdir" install.man
}

