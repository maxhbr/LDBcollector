{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gitlab.com/fedora/legal/fedora-license-data/-/raw/main/fedora-license-schema.json",
  "title": "fedora-license",
  "description": "JSON with data of fedora licenses",
  "type": "object",
  "properties": {
    "$ref": {
      "type": "object",
      "properties": {
        "license": {
          "type": "object",
          "properties": {
            "expression": { "type": "string" },
            "status": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "packages_with_exceptions": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "url": { "type": "string" }
          }
        },
        "fedora": {
          "type": "object",
          "properties": {
            "legacy-name": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "legacy-abbreviation": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      },
      "required": [ "license", "fedora" ]
    }
  },
  "required": [ ]
}

